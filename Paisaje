<!DOCTYPE html>
<html lang="es">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Paisaje</title>
<style>
  body {
    margin: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #87CEEB; /* Color de fondo azul */
  }
  canvas {
    border: 2px solid black;
  }
</style>
</head>
<body>
<canvas id="paisajeCanvas" width="700" height="700"></canvas>
<script>
  const canvas = document.getElementById("paisajeCanvas");
  const ctx = canvas.getContext("2d");
  
  // Fondo
  ctx.fillStyle = "#87CEEB"; // Color de fondo azul
  ctx.fillRect(0, 0, canvas.width, canvas.height);
  
  // Pasto
  ctx.fillStyle = "#00FF00"; // Color de pasto verde
  ctx.fillRect(0, 500, canvas.width, canvas.height - 500);
  
  // Sol
  ctx.fillStyle = "#FFFF00"; // Color de sol amarillo
  ctx.beginPath();
  ctx.arc(600, 100, 50, 0, Math.PI * 2);
  ctx.fill();
  
  // Casa
  ctx.fillStyle = "#FFD700"; // Color de casa amarilla
  ctx.fillRect(200, 300, 300, 300);
  
  // Puerta
  ctx.fillStyle = "#9C6D0F"; // Color de puerta verde
  ctx.fillRect(300, 500, 100, 100);
  
  // Ventanas
  ctx.fillStyle = "#9C6D0F"; // Color de ventanas verde
  ctx.fillRect(210, 350, 70, 70);
  ctx.fillRect(420, 350, 70, 70);

  ctx.fillStyle = "#8B0000"; // Color de la chimenea rojo oscuro
  ctx.fillRect(390, 220, 30, 80);
  ctx.fillRect(380, 200, 50, 20);

  ctx.fillStyle = "#FFFFFF"; // Color de nubes blanco
  ctx.beginPath();
  ctx.arc(200, 100, 40, 0, Math.PI * 2);
  ctx.arc(240, 100, 50, 0, Math.PI * 2);
  ctx.arc(280, 100, 40, 0, Math.PI * 2);
  ctx.arc(240, 80, 40, 0, Math.PI * 2);
  ctx.fill();

   // Árbol
   ctx.fillStyle = "#8B4513"; // Color de tronco marrón
  ctx.fillRect(100, 300, 50, 200);
  ctx.fillStyle = "#228B22"; // Color de hojas verde
  ctx.beginPath();
  ctx.arc(125, 200, 100, 0, Math.PI * 2);
  ctx.fill();
  
  // Pájaros
  ctx.fillStyle = "#000000"; // Color de pájaros negro
  ctx.beginPath();
  ctx.moveTo(500, 100);
  ctx.lineTo(480, 80);
  ctx.lineTo(490, 70);
  ctx.lineTo(500, 80);
  ctx.closePath();
  ctx.fill();
  
  ctx.beginPath();
  ctx.moveTo(530, 120);
  ctx.lineTo(510, 100);
  ctx.lineTo(520, 90);
  ctx.lineTo(530, 100);
  ctx.closePath();
  ctx.fill();
</script>
</body>
</html>
