<body>
    <script>
        var canvas = document.getElementById('mycanvas');
         var ctx = canvas.getContext('2d');

    ctx.moveTo(0, 0);
    ctx.lineTo(100, 50);
    ctx.stroke(); 

    ctx.beginPath()
    ctx.moveTo(200, 200);
    ctx.lineTo(10, 50);
    ctx.lineTo(30, 180);
    ctx.lineTo(200, 200);
    ctx.stroke(); 
    ctx.fillStyle = "#8AFF64";
    ctx.fill();




    </script>
    
